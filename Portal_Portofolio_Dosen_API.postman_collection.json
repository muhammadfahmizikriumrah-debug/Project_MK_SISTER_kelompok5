{
  "info": {
    "name": "taskThink API",
    "description": "Postman collection untuk menguji seluruh microservice taskThink.",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    { "key": "base_url", "value": "http://localhost:8080", "type": "string" },
    { "key": "auth_token", "value": "", "type": "string" },
    { "key": "refresh_token", "value": "", "type": "string" },
    { "key": "user_id", "value": "00000000-0000-0000-0000-000000000000", "type": "string" },
    { "key": "username", "value": "dosen123", "type": "string" },
    { "key": "register_email", "value": "dosen@example.com", "type": "string" },
    { "key": "register_username", "value": "dosen123", "type": "string" },
    { "key": "register_password", "value": "Password123!", "type": "string" },
    { "key": "portfolio_id", "value": "00000000-0000-0000-0000-000000000000", "type": "string" },
    { "key": "media_id", "value": "00000000-0000-0000-0000-000000000000", "type": "string" }
  ],
  "item": [
    {
      "name": "Auth Service",
      "item": [
        {
          "name": "Register User",
          "event": [
            {
              "listen": "prerequest",
              "script": {
                "exec": [
                  "const timestamp = Date.now();",
                  "const suffix = Math.floor(Math.random() * 1000);",
                  "const email = `dosen_${timestamp}@example.com`;",
                  "const username = `dosen_${timestamp}`;",
                  "const password = 'Password123!';",
                  "pm.collectionVariables.set('register_email', email);",
                  "pm.collectionVariables.set('register_username', username);",
                  "pm.collectionVariables.set('register_password', password);"
                ]
              }
            },
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 201) {",
                  "  const data = pm.response.json()?.data;",
                  "  if (data?.accessToken) pm.collectionVariables.set('auth_token', data.accessToken);",
                  "  if (data?.refreshToken) pm.collectionVariables.set('refresh_token', data.refreshToken);",
                  "  if (data?.user?.id) pm.collectionVariables.set('user_id', data.user.id);",
                  "  if (data?.user?.username) pm.collectionVariables.set('username', data.user.username);",
                  "}",
                  ""
                ]
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [ { "key": "Content-Type", "value": "application/json" } ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"{{register_email}}\",\n  \"username\": \"{{register_username}}\",\n  \"password\": \"{{register_password}}\"\n}"
            },
            "url": { "raw": "{{base_url}}/api/auth/register", "host": ["{{base_url}}"], "path": ["api","auth","register"] }
          }
        },
        {
          "name": "Login User",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 200) {",
                  "  const data = pm.response.json()?.data;",
                  "  if (data?.accessToken) pm.collectionVariables.set('auth_token', data.accessToken);",
                  "  if (data?.refreshToken) pm.collectionVariables.set('refresh_token', data.refreshToken);",
                  "  if (data?.user?.id) pm.collectionVariables.set('user_id', data.user.id);",
                  "  if (data?.user?.username) pm.collectionVariables.set('username', data.user.username);",
                  "}",
                  ""
                ]
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [ { "key": "Content-Type", "value": "application/json" } ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"{{register_email}}\",\n  \"password\": \"{{register_password}}\"\n}"
            },
            "url": { "raw": "{{base_url}}/api/auth/login", "host": ["{{base_url}}"], "path": ["api","auth","login"] }
          }
        },
        {
          "name": "Refresh Token",
          "request": {
            "method": "POST",
            "header": [
              { "key": "Content-Type", "value": "application/json" }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"refreshToken\": \"{{refresh_token}}\"\n}"
            },
            "url": { "raw": "{{base_url}}/api/auth/refresh", "host": ["{{base_url}}"], "path": ["api","auth","refresh"] }
          }
        },
        {
          "name": "Verify Token",
          "request": {
            "method": "GET",
            "header": [
              { "key": "Authorization", "value": "Bearer {{auth_token}}" }
            ],
            "url": { "raw": "{{base_url}}/api/auth/verify", "host": ["{{base_url}}"], "path": ["api","auth","verify"] }
          }
        }
      ]
    },
    {
      "name": "User Service",
      "item": [
        {
          "name": "Get User by ID",
          "request": {
            "method": "GET",
            "header": [
              { "key": "Authorization", "value": "Bearer {{auth_token}}" }
            ],
            "url": { "raw": "{{base_url}}/api/users/{{user_id}}", "host": ["{{base_url}}"], "path": ["api","users", "{{user_id}}"] }
          }
        },
        {
          "name": "Update User",
          "request": {
            "method": "PUT",
            "header": [
              { "key": "Authorization", "value": "Bearer {{auth_token}}" },
              { "key": "Content-Type", "value": "application/json" }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"fullName\": \"Dr. Updated Name\",\n  \"bio\": \"Updated bio\"\n}"
            },
            "url": { "raw": "{{base_url}}/api/users/{{user_id}}", "host": ["{{base_url}}"], "path": ["api","users", "{{user_id}}"] }
          }
        },
        {
          "name": "Get User by Username",
          "request": {
            "method": "GET",
            "header": [
              { "key": "Authorization", "value": "Bearer {{auth_token}}" }
            ],
            "url": { "raw": "{{base_url}}/api/users/username/{{username}}", "host": ["{{base_url}}"], "path": ["api","users","username", "{{username}}"] }
          }
        }
      ]
    },
    {
      "name": "Profile Service",
      "item": [
        {
          "name": "Get Profile",
          "request": {
            "method": "GET",
            "header": [
              { "key": "Authorization", "value": "Bearer {{auth_token}}" }
            ],
            "url": { "raw": "{{base_url}}/api/profiles/{{user_id}}", "host": ["{{base_url}}"], "path": ["api","profiles", "{{user_id}}"] }
          }
        },
        {
          "name": "Update Profile",
          "request": {
            "method": "PUT",
            "header": [
              { "key": "Authorization", "value": "Bearer {{auth_token}}" },
              { "key": "Content-Type", "value": "application/json" }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"bio\": \"Bio dosen yang diperbarui\",\n  \"contact\": {\n    \"email\": \"contact@example.com\",\n    \"phone\": \"+628123456789\"\n  },\n  \"socialLinks\": {\n    \"linkedin\": \"https://linkedin.com/in/dosen\",\n    \"github\": \"https://github.com/dosen\"\n  }\n}"
            },
            "url": { "raw": "{{base_url}}/api/profiles/{{user_id}}", "host": ["{{base_url}}"], "path": ["api","profiles", "{{user_id}}"] }
          }
        },
        {
          "name": "Get Public Profile",
          "request": {
            "method": "GET",
            "url": { "raw": "{{base_url}}/api/profiles/public/{{username}}", "host": ["{{base_url}}"], "path": ["api","profiles","public", "{{username}}"] }
          }
        }
      ]
    },
    {
      "name": "Portfolio Service",
      "item": [
        {
          "name": "List Portfolios",
          "request": {
            "method": "GET",
            "header": [
              { "key": "Authorization", "value": "Bearer {{auth_token}}" }
            ],
            "url": { "raw": "{{base_url}}/api/portfolios?page=1&limit=10", "host": ["{{base_url}}"], "path": ["api","portfolios"], "query": [ { "key": "page", "value": "1" }, { "key": "limit", "value": "10" } ] }
          }
        },
        {
          "name": "Create Portfolio",
          "request": {
            "method": "POST",
            "header": [
              { "key": "Authorization", "value": "Bearer {{auth_token}}" },
              { "key": "Content-Type", "value": "application/json" }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"title\": \"Sistem Informasi Akademik\",\n  \"description\": \"Pengembangan sistem informasi untuk manajemen akademik universitas\",\n  \"tags\": [\"PHP\", \"MySQL\", \"Bootstrap\"],\n  \"link\": \"https://github.com/dosen/sia\",\n  \"isPublic\": true\n}"
            },
            "url": { "raw": "{{base_url}}/api/portfolios", "host": ["{{base_url}}"], "path": ["api","portfolios"] }
          }
        },
        {
          "name": "Get Portfolio by ID",
          "request": {
            "method": "GET",
            "header": [
              { "key": "Authorization", "value": "Bearer {{auth_token}}" }
            ],
            "url": { "raw": "{{base_url}}/api/portfolios/{{portfolio_id}}", "host": ["{{base_url}}"], "path": ["api","portfolios", "{{portfolio_id}}"] }
          }
        },
        {
          "name": "Update Portfolio",
          "request": {
            "method": "PUT",
            "header": [
              { "key": "Authorization", "value": "Bearer {{auth_token}}" },
              { "key": "Content-Type", "value": "application/json" }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"title\": \"Sistem Informasi Akademik v2.0\",\n  \"description\": \"Update dengan fitur baru\",\n  \"tags\": [\"PHP\", \"MySQL\", \"Bootstrap\", \"Vue.js\"],\n  \"isPublic\": true\n}"
            },
            "url": { "raw": "{{base_url}}/api/portfolios/{{portfolio_id}}", "host": ["{{base_url}}"], "path": ["api","portfolios", "{{portfolio_id}}"] }
          }
        },
        {
          "name": "Delete Portfolio",
          "request": {
            "method": "DELETE",
            "header": [
              { "key": "Authorization", "value": "Bearer {{auth_token}}" }
            ],
            "url": { "raw": "{{base_url}}/api/portfolios/{{portfolio_id}}", "host": ["{{base_url}}"], "path": ["api","portfolios", "{{portfolio_id}}"] }
          }
        },
        {
          "name": "Get Portfolios by User",
          "request": {
            "method": "GET",
            "header": [
              { "key": "Authorization", "value": "Bearer {{auth_token}}" }
            ],
            "url": { "raw": "{{base_url}}/api/portfolios/user/{{user_id}}", "host": ["{{base_url}}"], "path": ["api","portfolios","user", "{{user_id}}"] }
          }
        }
      ]
    },
    {
      "name": "Media Service",
      "item": [
        {
          "name": "Upload File",
          "request": {
            "method": "POST",
            "header": [
              { "key": "Authorization", "value": "Bearer {{auth_token}}" }
            ],
            "body": {
              "mode": "formdata",
              "formdata": [
                { "key": "file", "type": "file", "src": [] },
                { "key": "portfolioId", "value": "{{portfolio_id}}", "type": "text" }
              ]
            },
            "url": { "raw": "{{base_url}}/api/media/upload", "host": ["{{base_url}}"], "path": ["api","media","upload"] }
          }
        },
        {
          "name": "Get Media Info",
          "request": {
            "method": "GET",
            "header": [
              { "key": "Authorization", "value": "Bearer {{auth_token}}" }
            ],
            "url": { "raw": "{{base_url}}/api/media/{{media_id}}", "host": ["{{base_url}}"], "path": ["api","media", "{{media_id}}"] }
          }
        },
        {
          "name": "Delete Media",
          "request": {
            "method": "DELETE",
            "header": [
              { "key": "Authorization", "value": "Bearer {{auth_token}}" }
            ],
            "url": { "raw": "{{base_url}}/api/media/{{media_id}}", "host": ["{{base_url}}"], "path": ["api","media", "{{media_id}}"] }
          }
        }
      ]
    },
    {
      "name": "Search Service",
      "item": [
        {
          "name": "Search Portfolios",
          "request": {
            "method": "GET",
            "header": [
              { "key": "Authorization", "value": "Bearer {{auth_token}}" }
            ],
            "url": { "raw": "{{base_url}}/api/search/portfolios?q=php&page=1&limit=10", "host": ["{{base_url}}"], "path": ["api","search","portfolios"], "query": [ { "key": "q", "value": "php" }, { "key": "page", "value": "1" }, { "key": "limit", "value": "10" } ] }
          }
        },
        {
          "name": "Index Portfolio",
          "request": {
            "method": "POST",
            "header": [
              { "key": "Authorization", "value": "Bearer {{auth_token}}" },
              { "key": "Content-Type", "value": "application/json" }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"portfolioId\": \"{{portfolio_id}}\"\n}"
            },
            "url": { "raw": "{{base_url}}/api/search/index", "host": ["{{base_url}}"], "path": ["api","search","index"] }
          }
        }
      ]
    }
  ]
}
